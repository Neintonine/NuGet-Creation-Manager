<UserControl x:Class="NUGETManager.Views.FileBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NUGETManager.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel Name="RootPanel">
        <Button Content="Open..." DockPanel.Dock="Right" Padding="20,0" Click="Button_Click"></Button>
        <TextBox Name="FilePathEntry" Text="{Binding Mode=TwoWay,Path=Path}" />
    </DockPanel>
</UserControl>

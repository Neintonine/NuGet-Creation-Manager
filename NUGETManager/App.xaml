<Application x:Class="NUGETManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:NUGETManager"
             xmlns:converter="clr-namespace:NUGETManager.Converter"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <FontFamily x:Key="FontAwesome">pack://application:,,,/Fonts/#Font Awesome 5 Free Solid</FontFamily>

        <Style TargetType="TextBox">
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,1"></Setter>
        </Style>

        <converter:InverseBooleanConverter x:Key="InverseBooleanConverter" />
    </Application.Resources>
</Application>
